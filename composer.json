{
	"name": "NikkiLoveGod/Paste",
	"description": "Pastebin service with fileupload.",
	"keywords": ["paste", "upload"],
	"license": "MIT",
	"type": "project",
    "authors": [
      {
        "name": "Sami Kurvinen",
        "email": "sami.kurvinen@gmail.com",
        "homepage": "http://samikurvinen.fi",
        "role": "Code owner"
      }
    ],
	"require": {
		"laravel/framework": "5.0.*",
		"barryvdh/laravel-ide-helper": "^2.0",
		"illuminate/html": "^5.0"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Paste\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
